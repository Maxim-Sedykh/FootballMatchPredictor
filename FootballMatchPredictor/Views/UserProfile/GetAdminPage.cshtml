                        <tr>
                            <td scope="row" class="ps-5">Пользователи</td>
                            <td>Просмотр, удаление</td>
                            <td>
                                <a class="btn btn-primary br-40" role="button" asp-controller="User" asp-action="GetAllUsers">
                                    Перейти
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td scope="row" class="ps-5">Коэффициенты</td>
                            <td>Просмотр, удаление, изменение</td>
                            <td>
                                <a class="btn btn-primary br-40" role="button" asp-controller="Coefficient" asp-action="GetAllCoefficients">
                                    Перейти
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td scope="row" class="ps-5">Матчи</td>
                            <td>Просмотр, удаление, изменение, создание</td>
                            <td>
                                <a class="btn btn-primary br-40" role="button" asp-controller="Match" asp-action="GetMatchesByAdmin">
                                    Перейти
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td scope="row" class="ps-5">Команды</td>
