                            <td>
                                <a class="btn btn-primary br-40" role="button" asp-controller="Team" asp-action="GetAllTeamsByAdmin">
                                    Перейти
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td scope="row" class="ps-5">Денежные выводы</td>
                            <td>Просмотр</td>
                            <td>
                                <a class="btn btn-primary br-40" role="button" asp-controller="Withdrawing" asp-action="GetAllWithdrawings">
                                    Перейти
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td scope="row" class="ps-5">Ставки</td>
                            <td>Просмотр</td>
                            <td>
                                <a class="btn btn-primary br-40" role="button" asp-controller="Bet" asp-action="GetAllBets">
                                    Перейти
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-2">
        </div>
    </div>
