@using FootballMatchPredictor.Domain.Enums
@using FootballMatchPredictor.Domain.Extensions
@using FootballMatchPredictor.Domain.ViewModels.UserProfile
@model WithdrawingMoneyViewModel


<div class="container">
    <form id="withdrawingForm">
        <div class="form-group row my-3">
            Количество ваших средств: @Model.WinningSum ₽
        </div>
        <div class="form-group row my-3">
            <div class="col-md-2 pt-2">
                <label asp-for="OutputAmount">Количетсво денег</label>
            </div>
            <div class="col-sm-10 ps-4">
                <input asp-for="OutputAmount" type="number" class="form-control" />
            </div>
        </div>
        <div class="form-group row my-3">
            <div class="col-md-2 pt-2">
                <label asp-for="PaymentMethod">Платёжный метод</label>
            </div>
            <div class="col-sm-10 ps-4">
                <select class="form-select" asp-for="PaymentMethod">
                    @foreach (PaymentMethod paymentMethod in Enum.GetValues(typeof(PaymentMethod)))
                    {
                        <option value="@paymentMethod">
                            @paymentMethod.GetDisplayName()
                        </option>
                    }
                </select>
            </div>
        </div>
        <button type="button" class="btn btn-primary mt-3"
                onclick="doActionWithPopupWindow(event, { url: '/UserProfile/WithdrawingMoney', formId: 'withdrawingForm' })">
            Вывести денежные средства
        </button>
    </form>
</div>
