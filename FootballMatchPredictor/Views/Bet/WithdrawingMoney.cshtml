@using FootballMatchPredictor.Domain.ViewModels.Bet

@model WithdrawingMoneyViewModel


<div class="container">
    <form id="withdrawingForm">
        <div class="form-group row my-3">
            <p class="text-center">
                Количество ваших средств: @Model.WinningSum ₽
            </p>
        </div>
        <div class="form-group row my-3">
            <div class="col-md-2 pt-2">
                <label asp-for="OutputAmount">Количетсво денег</label>
            </div>
            <div class="col-sm-10 ps-4">
                <input asp-for="OutputAmount" type="number" class="form-control" />
            </div>
        </div>
        <div class="form-group row my-3">
            <div class="col-md-2 pt-2">
                <label asp-for="PaymentMethod">Платёжный метод</label>
            </div>
            <div class="col-sm-10 ps-4">
                <select class="form-control" id="paymentMethodId" asp-for="PaymentMethod" data-minimum-results-for-search="Infinity" style="width:100%;">
                </select>
            </div>
        </div>
        <button type="button" class="btn btn-primary mt-3"
                onclick="doActionWithPopupWindow(event, { url: '/Bet/WithdrawingMoney', formId: 'withdrawingForm' })">
            Вывести денежные средства
        </button>
    </form>
</div>


<script>
    initSelect2ForEnum({ url: '/Bet/GetPaymentMethods', selectId: 'paymentMethodId', placeholder: 'Выберите платёжный метод', isModal: true });
</script>

